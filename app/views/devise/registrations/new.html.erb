<div class="container">
  <div class="row" id="add-boat">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, label: false, placeholder: "Email"%>
          <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "First name" %>
          <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Last name" %>


          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" }, label: false, placeholder: "Password" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" }, label: false, placeholder: "Password confirmation" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
