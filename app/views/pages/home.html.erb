<div class="banner">
  <h1>AirBnBoat</h1>
  <%= form_tag(boats_path, method: "get", class: 'flex-form') do %>
    <%= text_field_tag(:country, nil, type: 'search', placeholder: "Where ?") %>
    <%= date_field_tag(:start_date) %>
    <%= date_field_tag(:end_date) %>
    <%= submit_tag("Search", name: nil) %>
  <% end %>
</div>
