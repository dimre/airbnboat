<form role="form" action="boats" method="get">
 <div class="col-md-4">
   <div class="form-group">
     <label class="sr-only" for="locationTextField">Location</label>
     <input type="search" class="form-control" id="locationTextField"  name="location" placeholder="Where ?">
   </div>
 </div>
 <div class="col-md-2">
   <div class="form-group">
     <label class="sr-only" for="chkin">Check in</label>
     <div class="input-group">
       <input type="text" class="form-control" id="chkin" name="chkin" placeholder="Check in">
       <span class="input-group-addon"><i class="glyphicon glyphicon-calendar" id="glyph-chkin"></i></span>
     </div>
   </div>
 </div>
 <div class="col-md-2">
   <div class="form-group">
     <label class="sr-only" for="chkout">Check out</label>
     <div class="input-group">
       <input type="text" class="form-control" id="chkout"  name="chkout" placeholder="Check out">
       <span class="input-group-addon"><i class="glyphicon glyphicon-calendar" id="glyph-chkout"></i></span>
     </div>
   </div>
 </div>
 <div class="col-md-2">
   <div class="form-group">
     <label class="sr-only" for="guest">Guest</label>
     <select id="guest" name="guests" class="form-control">
         <option value="1">1 Guest</option>
         <option value="2">2 Guests</option>
         <option value="3">3 Guests</option>
         <option value="4">4 Guests</option>
         <option value="5">5 Guests</option>
         <option value="6">6 Guests</option>
         <option value="7">7 Guests</option>
         <option value="8">8 Guests</option>
         <option value="9">9 Guests</option>
         <option value="10">10+ Guests</option>
     </select>
   </div>
 </div>
 <div class="col-md-2">
   <button type="submit" class="btn btn-default btn-block <%= current_page?(root_path) ? "btn-primary" : "btn-default"  %>">Search</button>
 </div>
</form>
